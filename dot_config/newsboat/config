auto-reload yes
max-items 50

reload-threads 100

cleanup-on-quit yes

browser "/usr/sbin/mpv %u"
macro m set browser "/usr/sbin/mpv %u"; open-in-browser ; set browser "/usr/sbin/w3m %u"
macro l set browser "/usr/sbin/firefox %u"; open-in-browser ; set browser "/usr/sbin/w3m %u"

feed-sort-order unreadarticlecount-asc

unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

bind-key j down
bind-key k up
bind-key l open
bind-key h quit

color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     cyan
color listfocus_unread   black     cyan
color info               default   black
color article            default   default

highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
