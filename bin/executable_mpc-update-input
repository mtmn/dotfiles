#!/bin/bash

show_usage() {
    echo "Usage: $0 [input_file]"
    echo "Examples:"
    echo "  $0 directories.txt    # Read from file"
    echo "  $0                    # Read from stdin"
    echo "  ls | $0               # Pipe input"
    echo "  $0 < directories.txt  # Redirect input"
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
    show_usage
    exit 0
fi

if [ $# -eq 0 ]; then
    if [ -t 0 ]; then
        echo "Error: No input file specified and no piped input detected."
        show_usage
        exit 1
    fi
    INPUT_SOURCE="/dev/stdin"
    echo "Reading directories from stdin..."
elif [ $# -eq 1 ]; then
    INPUT_FILE="$1"
    if [ ! -f "$INPUT_FILE" ]; then
        echo "Error: File '$INPUT_FILE' not found!"
        exit 1
    fi
    INPUT_SOURCE="$INPUT_FILE"
    echo "Reading directories from file: $INPUT_FILE"
else
    echo "Error: Too many arguments."
    show_usage
    exit 1
fi

total_lines=0
updated_count=0
error_count=0
declare -A top_dirs

while IFS= read -r line; do
    if [[ -z "$line" ]]; then
        continue
    fi
    
    clean_line="${line%/}"
    
    if [[ "$clean_line" == *"/"* ]]; then
        top_dir="${clean_line%%/*}"
    else
        top_dir="$clean_line"
    fi
    
    top_dirs["$top_dir"]=1
    
done < "$INPUT_SOURCE"

# Check if we found any directories
if [ ${#top_dirs[@]} -eq 0 ]; then
    echo "No directories found in input."
    exit 0
fi

echo "Found ${#top_dirs[@]} unique top-level directories to update."
echo

for directory in "${!top_dirs[@]}"; do
    total_lines=$((total_lines + 1))
    
    echo "Updating: '$directory'"
    
    if mpc update "$directory" > /dev/null 2>&1; then
        echo "  ✓ Success"
        updated_count=$((updated_count + 1))
    else
        echo "  ✗ Failed"
        error_count=$((error_count + 1))
    fi
    
    sleep 1
done

echo
echo "Update completed!"
echo "Total directories processed: $total_lines"
echo "Successfully updated: $updated_count"
echo "Errors: $error_count"
echo

mpc status
